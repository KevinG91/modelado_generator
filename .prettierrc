{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "printWidth": 120,
          "tabWidth": 4
        }
      },
      {
        "files": "*.md",
        "options": {
          "printWidth": 100,
          "proseWrap": "always"
        }
      },
      {
        "files": ["*.yml", "*.yaml"],
        "options": {
          "tabWidth": 4,
          "singleQuote": true
        }
      }
    ]
  }